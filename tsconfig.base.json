{
	"compilerOptions": {
		"target": "es2017",
		"lib": [
			"dom",
			"es2019"
		],
		"module": "ES2022",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		"skipDefaultLibCheck": true,
		"pretty": true,
		"strict": true,
		"alwaysStrict": true,
		"strictNullChecks": true,
		"resolveJsonModule": true,
		"sourceMap": true,
		"noUncheckedIndexedAccess": true,
		"composite": true,
		"declarationMap": true,
		"types": []
	},
	"include": [
		"./src/**/*"
	]
}